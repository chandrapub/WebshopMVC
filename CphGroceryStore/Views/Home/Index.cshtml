@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="background-image:url(/Content/Images/driscolls.jpg); background-repeat:no-repeat; background-size:cover; margin-top:30px;">
    <h1>Shop with great comfort !!</h1>
    <h3 class="lead">At our own home, at your free time !!!</h3>
</div>

<div class="row" style="background-color:azure">
    <div class="col-md-4">
        <h2> Startup </h2>
        <p> New to the store? Give yourself a treat through the shop! </p>
        <p> We can deliver the products to your door by @DateTime.Now.AddDays(1).ToLongDateString().</p>
    </div>
    <div class="col-md-8" style="width:100%;">
        @using (Html.BeginForm())
        {
            @Html.TextBox("searchCriteria")
            <input type="submit" value="Find products" />
        }

        <h2> Our products </h2>
        <table class="table-striped table-bordered table-responsive" style="width:100%">
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name </td>
                    <td>@product.Description </td>
                    <td>@Html.ActionLink("Details", "Details", new { id = product.ID }) </td>
                    <td style="text-align:center"> <img src='@Url.Action("Picture", new { id = product.ID })' /> </td>

                </tr>
            }
        </table>
    </div>
</div>